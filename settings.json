{
    // Only for VSCode, Codium doesn't have built-in telemetry
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    // Editor settings
    "workbench.colorTheme": "To on Dark",
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,
    "editor.formatOnSave": true,
    "editor.fontLigatures": true,
    // Vim emulation settings
    "vim.normalModeKeyBindingsNonRecursive": [
        // Find actions
        {
            "before": [
                "<leader>",
                "f",
                "f"
            ],
            "commands": [
                "workbench.action.findInFiles"
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "s",
            ],
            "commands": [
                "workbench.action.gotoSymbol"
            ]
        },
        {
            "before": [
                "<leader>",
                "<Space>"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "<leader>",
                "e"
            ],
            "commands": [
                "workbench.files.action.focusFilesExplorer"
            ]
        },
        // Save actions
        {
            "before": [
                "<leader>",
                "s",
                "f"
            ],
            "commands": [
                "workbench.action.files.save"
            ]
        },
        {
            "before": [
                "<leader>",
                "s",
                "s"
            ],
            "commands": [
                "workbench.action.files.saveFiles"
            ]
        },
        // Close actions
        {
            "before": [
                "<leader>",
                "w"
            ],
            "commands": [
                "workbench.action.closeActiveEditor"
            ]
        },
        {
            "before": [
                "<leader>",
                "q",
                "q"
            ],
            "commands": [
                "workbench.action.closeWindow"
            ]
        },
        // Formatting
        {
            "before": [
                "<leader>",
                ";"
            ],
            "commands": [
                "editor.action.formatDocument"
            ]
        },
        // Code actions
        {
            "before": [
                "<leader>",
                "c",
                "a"
            ],
            "commands": [
                "editor.action.quickFix"
            ]
        },
        // Java related stuff
        {
            "before": [
                "<leader>",
                "j",
                "c"
            ],
            "commands": [
                "java.view.menus.file.newJavaClass"
            ]
        },
        // Other
        {
            "before": [
                "<leader>",
                "v",
                "z"
            ],
            "commands": [
                "workbench.action.toggleZenMode"
            ]
        },
        {
            "before": [
                "<leader>",
                "t"
            ],
            "commands": [
                "workbench.action.terminal.toggleTerminal"
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "editor.action.showHover"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<leader>",
                "c",
                "a"
            ],
            "commands": [
                "editor.action.quickFix"
            ]
        },
    ],
    "vim.leader": "<Space>",
    "window.titleBarStyle": "custom",
    // Nothing against Red Hat, but I'd rather not use this at work
    "redhat.telemetry.enabled": false,
    "git.autofetch": true,
    "java.maven.updateSnapshots": true,
    "workbench.iconTheme": "file-icons"
}
